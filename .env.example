# Database Configuration
DATABASE_URL=postgresql://asf_user:asf_password@localhost:5432/asf_engine
POSTGRES_DB=asf_engine
POSTGRES_USER=asf_user
POSTGRES_PASSWORD=change_this_password

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars-required
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Firebase Configuration (Optional - for Firebase auth)
# Get these from Firebase Console: https://console.firebase.google.com/
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id

# Demo Credentials (for testing without Firebase)
DEMO_EMAIL=admin@test.com
DEMO_PASSWORD=1234

# Email Configuration (for verification and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
BASE_URL=http://localhost:8501

# Backend API
BACKEND_API_URL=http://localhost:8000
PORT=8000

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Stripe Configuration (for billing)
STRIPE_API_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS Configuration (for deployment)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Application Configuration
APP_NAME=ASF-Engine
APP_VERSION=2.0.0
ENVIRONMENT=production
DEBUG=false

# Domain Configuration (for deployment)
DOMAIN=your-domain.com
EMAIL=admin@your-domain.com

# CORS Configuration (comma-separated allowed origins)
CORS_ORIGINS=http://localhost:8501,http://localhost:3000
